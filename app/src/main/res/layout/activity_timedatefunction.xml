<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TimeDateFunctionActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:text="SQLite使用时间和日期函数"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/timedatefuction_content_edit"
            android:layout_width="150dp"
            android:hint="输入：消息内容"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/timedatefuction_date_edit"
            android:layout_width="wrap_content"
            android:hint="例如：2017-05-07"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/timedatefuction_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/timedatefuction_all_query_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部信息查询" />

        <Button
            android:id="@+id/timedatefuction_action_query_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5月信息查询" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black"></TextView>

    <ListView
        android:id="@+id/timedatefuction_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"></ListView>
</LinearLayout>
